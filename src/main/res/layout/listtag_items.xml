<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="10"
    android:padding="2dp" >

    <TextView
        android:id="@+id/TvTagUii"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:paddingTop="3dp"
        android:paddingBottom="3dp" />
    <TextView
        android:id="@+id/TvTitle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:textColor="#08308e"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp" />
    <TextView
        android:id="@+id/TvLocation"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:textColor="@color/blue1"
        android:gravity="right"
        android:paddingTop="3dp"
        android:paddingBottom="3dp" />

    <ImageView
        android:id="@+id/tagLoc"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/TvTagLen"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" android:visibility="gone" />

    <TextView
        android:id="@+id/TvTagCount"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="3dp"
        android:gravity="end"
        android:visibility="gone"
        android:paddingBottom="3dp" />

    <TextView
        android:id="@+id/TvTagRssi"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/tagLocation"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_weight="1"
        android:visibility="gone"/>

</LinearLayout>